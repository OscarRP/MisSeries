<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.oscarruiz.misseries.activities.SplashActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/posters_layout"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/logo"
            android:background="@drawable/collage"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/dexter"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@mipmap/little_liars"/>
            <ImageView
                android:id="@+id/breaking_bad"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/breaking_bad"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/game_of_trhones"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/game_of_thrones" />
            <ImageView
                android:id="@+id/walking_dead"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/walking_dead" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/logo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tmdb_attribution"
            android:textSize="9sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/tmdb_logo"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>
